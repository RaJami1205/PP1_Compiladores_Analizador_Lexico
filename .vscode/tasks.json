{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generar Lexer",
      "type": "shell",
      "command": "java",
      "args": [
        "-jar", "lib/jflex-full-1.9.1.jar",
        "src/Codigo/Lexer.flex",
        "-d", "src/ParserLexer"
      ],
      "group": "build"
    },
    {
      "label": "Generar Parser",
      "type": "shell",
      "command": "java",
      "args": [
        "-jar", "lib/java-cup-11b.jar",
        "-parser", "Parser",
        "-symbols", "sym",
        "-destdir", "src/ParserLexer",
        "src/Codigo/Parser.cup"
      ],
      "group": "build"
    },
    {
      "label": "Compilar Java",
      "type": "shell",
      "command": "javac",
      "args": [
        "-d", "bin",
        "-cp", "'lib/*;src'",
        "src/ParserLexer/*.java",
        "src/Compilador/*.java"
      ],
      "group": "build"
    },
    {
      "label": "Ejecutar TestParser",
      "type": "shell",
      "command": "java",
      "args": [
        "-cp", "'bin;lib/*'",
        "Compilador.TestParser",
        "src/testing/ejemplo.txt"
      ],
      "group": "test",
      "dependsOn": ["Generar Lexer", "Generar Parser", "Compilar Java"]
    },
    {
      "label": "Build Completo",
      "dependsOn": [
        "Generar Lexer",
        "Generar Parser",
        "Compilar Java",
        "Ejecutar TestParser"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
